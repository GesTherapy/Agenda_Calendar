<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/day_square"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FF000000"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >
    
    <TextView
        android:id="@+id/day_view_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
    
    <TextView
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"       
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="" />

    <TextView
        android:id="@+id/day_view_label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"       
        android:layout_below="@id/day_view_date"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/day_view_label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"       
        android:layout_below="@id/space"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/day_view_label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"       
        android:layout_below="@id/day_view_label1"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/day_view_label4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"       
        android:layout_below="@id/day_view_label2"
        android:textSize="12sp" />
    
</RelativeLayout>