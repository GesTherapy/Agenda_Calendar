<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">



    <TextView
        android:id="@+id/month_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="December 2011"
        android:textSize="16sp">
    </TextView>
    
    <LinearLayout
        android:clickable="false"
        android:id="@+id/day_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:layout_below="@id/month_bar">

    </LinearLayout>
    
	<com.DeezApps.Agenda_Calendar.DateSquare 
	    android:id="@+id/DateSquare"
	    android:layout_height="fill_parent"
	    android:layout_width="fill_parent"
	    android:layout_below="@id/day_bar"
	    android:layout_alignParentBottom="true">
	</com.DeezApps.Agenda_Calendar.DateSquare>
    
	    <TextView
        android:id="@+id/month_bar_left"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="-"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        android:paddingLeft="12dp"
        android:paddingTop="6dp"
        android:paddingRight="36dp"
        android:paddingBottom="7dp"
        android:layout_alignBottom="@id/day_bar">
    </TextView>

    <TextView
        android:id="@+id/month_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="+"
        android:layout_alignParentRight="true"
        android:textSize="20sp"
        android:paddingLeft="36dp"
        android:paddingTop="6dp"
        android:paddingRight="12dp"
        android:paddingBottom="7dp"
        android:layout_alignBottom="@id/day_bar">
    </TextView>

</RelativeLayout>